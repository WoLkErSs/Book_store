%main.container
  %h1.general-title-margin Сatalog
  .hidden-xs.clearfix
    .dropdowns.pull-right
      .dropdown.width-240
        %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
          =@current_filter
          %i.fa.fa-angle-down.dropdown-icon.pull-right
        %ul.dropdown-menu
          -@filters.each do |filter, filter_name|
            %li
              = link_to filter_name, url_for(selection: filter)
    %ul.list-inline.pt-10.mb-25.mr-240
      %li.mr-35
        = link_to categories_path, class: "filter-link"  do
          = t(:'categories.all')
          %span.badge.general-badge
            = @books_all
      - @categories.each do |category|
        %li.mr-35
          = link_to category_path(category.id), class: "filter-link"  do
            = category.title
            %span.badge.general-badge
              = category.books.count
  .dropdowns.mb-25.visible-xs
    %p.lead.small.mb-10 Filter by category
    .dropdown
      %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
        Newest first
        %i.fa.fa-angle-down.dropdown-icon.pull-right
      %ul.dropdown-menu
        %li
          %a{href: "#"} Newest first
        %li
          %a{href: "#"} Popular first
        %li
          %a{href: "#"} Price: Low to hight
        %li
          %a{href: "#"} Price: Hight to low
    %p.lead.small.mb-10 Sort by
    .dropdown
      %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
        Newest first
        %i.fa.fa-angle-down.dropdown-icon.pull-right
      %ul.dropdown-menu
        %li
          %a{href: "#"} Newest first
        %li
          %a{href: "#"} Popular first
        %li
          %a{href: "#"} Price: Low to hight
        %li
          %a{href: "#"} Price: Hight to low
  .mb-120
    .row
      -@books.each do |book|
        .col-xs-6.col-sm-3
          .general-thumb-wrap
            .thumbnail.general-thumbnail
              =image_tag( book.image_name, alt: "design-book", class: "img-shadow general-thumbnail-img")
              .thumb-hover
                .general-thumb-link-wrap
                  %a.thumb-hover-link{href: "#"}
                    %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
                  %a.thumb-hover-link{href: "#"}
                    %i.fa.fa-shopping-cart.thumb-icon
          .general-thumb-info
            %p.title
              =book.title
            %p.font-16.in-gold-500
              €
              =book.price
            %span.divider-sm
            %p.lead.small
              -book.authors.each do |author|
                =author.name
                %br/
    .text-center
      %button.btn.btn-primary View More
